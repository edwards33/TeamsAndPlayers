<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player Name"
        android:id="@+id/player_value"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age"
        android:id="@+id/age_label"
        android:layout_below="@+id/player_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\??"
        android:id="@+id/age_value"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/player_value"
        android:layout_toRightOf="@+id/age_label"
        android:layout_toEndOf="@+id/age_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Club"
        android:id="@+id/club_label"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/player_value"
        android:layout_toRightOf="@+id/age_value"
        android:layout_toEndOf="@+id/age_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\????"
        android:id="@+id/club_value"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/player_value"
        android:layout_toRightOf="@+id/club_label"
        android:layout_toEndOf="@+id/club_label" />

</RelativeLayout>